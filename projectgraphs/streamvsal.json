{

    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

 

    "description": "This chart shows estimated advertising revenue for top twitch streamers for 2020.",

  

  

    "title": {

      "text": "2020 ad revenue for select Twitch streamers",

      "subtitle":"",

      "subtitleFontStyle":"italic",

      "subtitleFontSize":10,

      "anchor": "start",

      "color": "black"

    },

   
 "height": 300,"width": 260,
   

     "data": {
    "url": "https://raw.githubusercontent.com/CCecondata/CCecondata.github.io/main/projectdata/streameradrevenue.csv",
    "format": {"type": "csv"}
    },
    
    "transform": [
    {"calculate": "datum.value-176593", "as": "diff"}
    ],

    "layer": [ 

    {"mark": {
      "type": "bar",
      "color":"aquamarine"
      },
    
    "encoding": {
      "x": {
        "field": "name",
        "type": "nominal",
        "sort": "",
        "axis": {
          "title": "",
          "grid": false,
          "ticks": false,
          "labelAngle": 45
          }
          },
      "y": {
        "field": "value",
        "type": "quantitative",
        "title": "US Dollars",
        "axis": {"grid": false}
        },
        "tooltip":[{"field":"diff", "type":"quantitative", "title":"Difference ", "format":"$,"
        }]
      
    }
    
},
{ "data": {
