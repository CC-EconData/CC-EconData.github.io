{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Shows total % of watch time on twitch by Platform.",
  "data": {
        "url": "https://raw.githubusercontent.com/CCecondata/CCecondata.github.io/main/projectdata/watch_time.csv",
        "format": {"type": "csv"}},


"transform": [
    {
      "aggregate": [{
       "op": "sum",
       "field": "watch_time",
       "as": "watch_sum"
      }],
      "groupby": ["Platform"]},

      {
    "window": [{
      "op": "sum",
      "field": "watch_sum",
      "as": "TotalTime"
    }],
    "frame": [null, null]
  },
  {"calculate": "(datum.watch_sum/datum.TotalTime)*100", "as": "% of Total Watch Time"}
  
  ], "mark": "arc",
  "params": [{
    "name": "platformselect",
    "select": {"type": "point", "fields": ["Platform"]},
    "bind": "legend"
  }],
  "encoding": {
    "theta": {"field": "watch_sum", "type": "quantitative"},
    "color": {"field": "Platform", "type": "nominal"},
  
    "opacity": {
      "condition": {"param": "platformselect", "value": 1},
      "value": 0.3
    },
    "tooltip": [
          {
            "field": "% of Total Watch Time",
            "type": "quantitative",
            "title": "% of Total Watch Time ",
            "format": ".2f"
          }
        ]
  }
    }


